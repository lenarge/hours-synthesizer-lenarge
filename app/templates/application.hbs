<h2 id="title">Hours Synthesizer</h2>

{{sheets-synthesizer sheetsData=sheetsData}}

{{outlet}}

<br />
<p>Apurações importadas: {{sheetsData.length}}</p>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th rowspan="2">Nome do Motorista</th>
      <th rowspan="2">Arquivo</th>
      <th rowspan="2">Versão</th>
      <th colspan="2">Data</th>
      <th colspan="3">Horas</th>
      <th colspan="2">Dias</th>
    </tr>
    <tr>
      <th>Inicial</th>
      <th>Final</th>
      <th>Adc. Noturno</th>
      <th>Espera</th>
      <th>Extra</th>
      <th>Apurado</th>
      <th>Pendente</th>
    </tr>
  </thead>
  <tbody>
    {{#each sheetsData as |sheet|}}
      <tr>
        <td>{{sheet.driverName}}</td>
        <td>{{sheet.fileName}}</td>
        <td>{{sheet.version}}</td>
        <td>{{moment-format sheet.startDate 'DD/MM/YYYY' 'M/D/YYYY'}}</td>
        <td>{{moment-format sheet.finalDate 'DD/MM/YYYY' 'M/D/YYYY'}}</td>
        <td>{{format-hours sheet.hoursAdc}}</td>
        <td>{{format-hours sheet.hoursEsp}}</td>
        <td>{{format-hours sheet.hoursExt}}</td>
        <td>{{sheet.daysFinished}}</td>
        <td>{{sheet.daysPendent}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
